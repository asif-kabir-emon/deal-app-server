generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  password   String?
  role       UserRole @default(user)
  isVerified Boolean  @default(false)
  isDeleted  Boolean  @default(false)
  createdAt  DateTime @default(now())

  profile Profiles?
  oauth   OAuth[]
  otp     OTP?

  @@map("users")
}

enum UserRole {
  user
  admin
}

model Profiles {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique @db.ObjectId
  firstName String?
  lastName  String?
  avatar    String?
  bio       String?
  createdAt DateTime @default(now())

  user Users @relation(fields: [userId], references: [id])

  @@map("user_profiles")
}

model OAuth {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @unique @db.ObjectId
  provider   Provider
  providerId String
  createdAt  DateTime @default(now())

  user Users @relation(fields: [userId], references: [id])

  @@map("oauth")
}

enum Provider {
  google
  github
  discord
  facebook
}

model OTP {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique @db.ObjectId
  code      String?
  type      OtpType
  expiresAt DateTime
  createdAt DateTime @default(now())

  user Users @relation(fields: [userId], references: [id])

  @@map("user_otps")
}

enum OtpType {
  email_verification
  password_reset
}
